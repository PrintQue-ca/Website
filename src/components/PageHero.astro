---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative flex flex-col items-center justify-center overflow-hidden px-4 py-20 text-center sm:py-24">
  <div
    class="absolute inset-0 bg-gradient-to-br from-printque-500 via-printque-600 to-printque-800 dark:from-printque-800 dark:via-printque-900 dark:to-printque-950"
    aria-hidden="true"
  />
  <div
    class="absolute inset-0 bg-gradient-to-tl from-accent-500/20 via-transparent to-printque-400/10 dark:from-accent-400/15 dark:to-printque-500/10"
    aria-hidden="true"
  />
  <div
    class="absolute inset-0 opacity-[0.12] dark:opacity-[0.1]"
    style="background-image: linear-gradient(rgba(255,255,255,.4) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.4) 1px, transparent 1px); background-size: 56px 56px;"
    aria-hidden="true"
  />
  <div class="absolute left-1/4 top-1/3 h-56 w-56 rounded-full bg-accent-400/25 blur-[90px] dark:bg-accent-500/15" aria-hidden="true" />
  <div class="absolute bottom-1/4 right-1/4 h-64 w-64 rounded-full bg-printque-400/20 blur-[100px] dark:bg-printque-500/15" aria-hidden="true" />
  <div class="relative z-10 flex max-w-2xl flex-col items-center gap-4">
    <h1 class="text-4xl font-extrabold tracking-tight text-white drop-shadow-lg sm:text-5xl font-sans">
      {title}
    </h1>
    <p class="mx-auto max-w-xl text-base text-white/90 sm:text-lg leading-relaxed">
      {subtitle}
    </p>
  </div>
</section>
