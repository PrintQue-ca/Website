---
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.png';

const path = Astro.url.pathname;
const nav = [
  { href: '/', label: 'Home' },
  { href: '/features', label: 'Features' },
  { href: '/docs/getting-started', label: 'Docs' },
  { href: 'https://github.com/PrintQue-ca/PrintQue/releases/latest', label: 'Download', external: true },
];
---

<header class="border-b border-neutral-200 dark:border-neutral-800 bg-white/80 dark:bg-neutral-950/80 backdrop-blur sticky top-0 z-50">
  <nav class="mx-auto max-w-4xl px-4 py-4 flex items-center justify-between gap-4">
    <a href="/" class="flex items-center gap-2 hover:opacity-90 transition-opacity" aria-label="PrintQue home">
      <Image src={logo} alt="" width={32} height={36} class="h-8 w-auto object-contain" />
      <span class="font-semibold text-lg text-neutral-900 dark:text-white">PrintQue</span>
    </a>
    <ul class="flex flex-wrap items-center gap-6">
      {nav.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              'text-sm font-medium transition-colors',
              !item.external && (path === item.href || (item.href !== '/' && path.startsWith(item.href)))
                ? 'text-printque-600 dark:text-printque-400 font-medium'
                : 'text-neutral-600 dark:text-neutral-400 hover:text-printque-600 dark:hover:text-printque-400 hover:underline',
            ]}
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="https://github.com/PrintQue-ca/PrintQue"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-printque-600 dark:hover:text-printque-400 hover:underline transition-colors"
        >
          GitHub
        </a>
      </li>
    </ul>
  </nav>
</header>
